<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.flash.rupiah.pro.MainActivity">

    <com.flash.rupiah.pro.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></com.flash.rupiah.pro.view.NoScrollViewPager>
   <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_1"
    android:alpha="0.6"
    android:background="@android:color/darker_gray" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_50"
       style="@style/CustomTab"></android.support.design.widget.TabLayout>

</LinearLayout>
