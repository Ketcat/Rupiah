<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rupiah.flash.pro.activity.AboutUsActivity">
    <include layout="@layout/activity_title"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/length_180"
        android:background="@mipmap/about_us_details" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us_details"
        android:layout_marginLeft="@dimen/length_20"
        android:layout_marginRight="@dimen/length_20"
        android:textSize="@dimen/size_15"
        android:textColor="@color/light_grey"
        android:layout_marginTop="@dimen/length_20"
        />
</LinearLayout>
