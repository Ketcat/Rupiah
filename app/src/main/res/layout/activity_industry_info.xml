<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ptyl.uang.flash.activity.IndustryInfoActivity">

    <include layout="@layout/activity_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/line_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_50"
                    android:layout_marginRight="@dimen/length_50"
                    android:layout_marginTop="@dimen/length_10"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_info1"
                            android:layout_width="@dimen/length_20"
                            android:layout_height="@dimen/length_20"
                            android:src="@drawable/circle_green" />

                        <TextView
                            android:id="@+id/tv_line1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/length_3"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_info1"
                            android:background="@color/green" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_info2"
                            android:layout_width="@dimen/length_20"
                            android:layout_height="@dimen/length_20"
                            android:src="@drawable/circle_green" />

                        <TextView
                            android:id="@+id/tv_line2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/length_3"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_info2"
                            android:background="@color/green" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_info3"
                            android:layout_width="@dimen/length_20"
                            android:layout_height="@dimen/length_20"
                            android:src="@drawable/circle_green" />

                        <TextView
                            android:id="@+id/tv_line3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/length_3"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/length_loss"
                            android:layout_toRightOf="@+id/iv_info3"
                            android:background="@color/green" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_info4"
                            android:layout_width="@dimen/length_20"
                            android:layout_height="@dimen/length_20"
                            android:src="@drawable/circle_green" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/length_10"
                    android:layout_marginLeft="@dimen/length_20"
                    android:layout_marginRight="@dimen/length_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/length_8"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/personal_info"
                        android:textColor="@color/green"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/length_8"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/identify_info"
                        android:textColor="@color/green"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/length_8"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/contact_info"
                        android:textColor="@color/green"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/length_8"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/industry_info"
                        android:textColor="@color/green"
                        android:textSize="@dimen/size_12" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_work_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_50"
                android:layout_marginTop="@dimen/length_10"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_work_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_20"
                    android:text="@string/work_type"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:id="@+id/tv_work_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_10"
                    android:layout_toRightOf="@+id/tv_work_type"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <ImageView
                    android:layout_width="@dimen/length_12"
                    android:layout_height="@dimen/length_21"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/length_20"
                    android:src="@mipmap/go_in" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_1"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_income"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_50"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_20"
                    android:text="@string/every_month_income"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:id="@+id/tv_income_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_10"
                    android:layout_toRightOf="@+id/tv_income"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <ImageView
                    android:layout_width="@dimen/length_12"
                    android:layout_height="@dimen/length_21"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/length_20"
                    android:src="@mipmap/go_in" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_1"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_company_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_50"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_20"
                    android:text="@string/company_name"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <EditText
                    android:id="@+id/et_tv_company_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_10"
                    android:layout_marginRight="@dimen/length_20"
                    android:layout_toRightOf="@+id/tv_company_name"
                    android:background="@null"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_1"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_company_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_50"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_company_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_20"
                    android:text="@string/company_address"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:id="@+id/tv_company_address_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_10"
                    android:layout_marginRight="@dimen/length_10"
                    android:layout_toLeftOf="@+id/iv_address"
                    android:layout_toRightOf="@+id/tv_company_address"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="@dimen/length_12"
                    android:layout_height="@dimen/length_21"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/length_20"
                    android:src="@mipmap/go_in" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_1"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_address_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_50"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_company_address_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_20"
                    android:text="@string/company_address_details"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <EditText
                    android:id="@+id/et_tv_company_address_details_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_10"
                    android:layout_marginRight="@dimen/length_20"
                    android:layout_toRightOf="@+id/tv_company_address_details"
                    android:background="@null"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_1"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_company_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_50"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_company_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_20"
                    android:text="@string/company_phone"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

                <EditText
                    android:id="@+id/et_tv_company_phone_number_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_10"
                    android:layout_marginRight="@dimen/length_20"
                    android:inputType="number"
                    android:layout_toRightOf="@+id/tv_company_phone_number"
                    android:background="@null"
                    android:textColor="@color/center_grey"
                    android:textSize="@dimen/size_15" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_10"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginTop="@dimen/length_10"
                android:text="@string/up_work_certificate"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/size_15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_150"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginRight="@dimen/length_20"
                android:background="@color/line_color">

                <ImageView
                    android:id="@+id/iv_add_industry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/industry_info_photo" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginRight="@dimen/length_20"
                android:layout_marginTop="@dimen/length_10"
                android:text="@string/check_type"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/size_13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginTop="@dimen/length_10"
                android:text="@string/other"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/size_15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_150"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginRight="@dimen/length_20"
                android:background="@color/line_color">

                <ImageView
                    android:id="@+id/iv_add_other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/industry_info_photo" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginRight="@dimen/length_20"
                android:layout_marginTop="@dimen/length_10"
                android:text="@string/other_details"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/size_13" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/length_40"
                android:layout_marginTop="@dimen/length_40"
                android:gravity="center">

                <Button
                    android:id="@+id/bt_industry_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_25"
                    android:layout_marginRight="@dimen/length_25"
                    android:background="@drawable/send_again_style"
                    android:text="@string/send_identify"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_15" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
